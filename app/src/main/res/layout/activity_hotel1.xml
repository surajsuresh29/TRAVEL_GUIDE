            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/dis"
                android:layout_below="@+id/hotel5"
                android:text="BOOK NOW"
                android:visibility="invisible" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

